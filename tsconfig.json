{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "emitDeclarationOnly": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./node/*"]
    },
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "./dist/typings",
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "node/**/*.ts",
    "test/**/*.ts"
  ],
  "typedocOptions": {
    "entryPoints": [
      "src/animation/index.ts",
      "src/canvas/index.ts",
      "src/channel/index.ts",
      "src/convert/index.ts",
      "src/dataStructure/index.ts",
      "src/deep/index.ts",
      "src/domTools/index.ts",
      "src/fileTool/index.ts",
      "src/markdown/index.ts",
      "src/math/index.ts",
      "src/net/index.ts",
      "src/plugins/index.ts",
      "src/polyfill/index.ts",
      "src/shared/index.ts",
      "src/tools/arrTools.ts",
      "src/tools/Clock.ts",
      "src/tools/colorTools.ts",
      "src/date/index.ts",
      "src/tools/disableDebug.ts",
      "src/tools/domTools.ts",
      "src/tools/eventTools.ts",
      "src/tools/fileTools.ts",
      "src/tools/scheduleTask.ts",
      "src/tools/tools.ts",
      "src/tools/FakeProgress.ts",
      "src/webApi/index.ts"
    ],
    "out": "./docs/type-doc",
    "plugin": [
      "typedoc-plugin-markdown"
    ],
    "excludePrivate": true
  }
}